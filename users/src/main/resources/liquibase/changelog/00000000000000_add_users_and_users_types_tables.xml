<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">

    <changeSet id="00000000000000" author="andres.atehortua">
        <createTable tableName="user_types">
            <column name="user_type_id" type="smallint">
                <constraints primaryKey="true"
                             primaryKeyName="user_types_user_type_id_pkey"/>
            </column>
            <column name="description" type="varchar(50)">
                <constraints nullable="false"
                             unique="true"
                             uniqueConstraintName="user_types_name_key"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="00000000000001" author="andres.atehortua">
        <comment>load initial data for user_types table</comment>
        <loadData file="liquibase/data/user_types_00000000000000.csv"
                  separator=";"
                  tableName="user_types"/>
    </changeSet>

    <changeSet id="00000000000002" author="andres.atehortua">
        <createTable tableName="users">
            <column name="user_id" type="BIGINT">
                <constraints primaryKey="true"
                             primaryKeyName="users_user_id_pkey"/>
            </column>
            <column name="name" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(50)">
                <constraints nullable="false"
                             unique="true"
                             uniqueConstraintName="users_email_key"/>
            </column>
            <column name="user_type_id" type="SMALLINT">
                <constraints referencedTableName="user_types"
                             referencedColumnNames="user_type_id"
                             foreignKeyName="users_user_type_id_fkey"
                             nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="00000000000003" author="andres.atehortua">
        <addAutoIncrement columnName="user_id"
                          incrementBy="1"
                          startWith="100"
                          tableName="users"/>
    </changeSet>

</databaseChangeLog>
